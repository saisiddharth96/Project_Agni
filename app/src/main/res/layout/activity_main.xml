<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainColourTeal"
    tools:context="com.example.saisi.agni.MainActivity"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30sp">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60sp"
        android:text="Welcome to Agni"
        android:textColor="#000"
        android:textSize="30sp" />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:layout_marginTop="30sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1sp"
            android:layout_marginTop="8sp"
            android:text="Email ID"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />

        <EditText
            android:id="@+id/EmailID"
            android:layout_width="350sp"
            android:layout_height="40sp"
            android:ems="10"
            android:hint="Enter Email Id"
            android:inputType="textPersonName"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />

        <EditText
            android:id="@+id/password"
            android:layout_width="350sp"
            android:layout_height="40sp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            tools:layout_editor_absoluteX="17sp"
            tools:layout_editor_absoluteY="130sp" />

        <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="342sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="0sp"
        android:orientation="vertical"
        android:paddingBottom="20sp"
        android:paddingTop="0sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/SignUpButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="171sp"
            android:layout_height="45sp"
            android:background="@color/Orange"
            android:text="SignUp"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />
            <com.google.android.gms.common.SignInButton
                android:layout_width="171sp"
                android:layout_height="47sp"
                android:id="@+id/GoogleSignInButton"></com.google.android.gms.common.SignInButton>

        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="11sp"
            android:text="Already have an id?  Please Login here"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />

        <Button
            android:id="@+id/LoginButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="0sp"
            android:background="@color/Orange"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <Button
            android:id="@+id/centerLoginButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:background="@color/Orange"
            android:text="Training Center Login"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />
    </LinearLayout>
</LinearLayout>
